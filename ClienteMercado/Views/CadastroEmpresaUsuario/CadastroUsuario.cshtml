                    @Html.ValidationMessageFor(m => m.ENDERECO_EMPRESA_USUARIO, String.Empty)
                </div>
            </div>
            <div id="secao_localizacao3" class="formata_campos_cadastro">
                <div id="label_complemento" class="formata_label">
