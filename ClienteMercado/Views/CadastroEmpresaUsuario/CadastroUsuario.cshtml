                    @Html.TextBoxFor(m => m.NOME_CIDADE_EMPRESA_USUARIO, new { style = "font-family: 'Verdana', Geneva, sans-serif; width: 200px;", maxlength = 50, @tabindex = "10" })
                    @Html.ValidationMessageFor(m => m.NOME_CIDADE_EMPRESA_USUARIO, String.Empty)
                </div>
            </div>
            <div id="secao_localizacao6" class="formata_campos_cadastro">
                <div id="label_bairro" class="formata_label">
