                    @Html.LabelFor(m => m.RAZAO_SOCIAL_EMPRESA)
                </div>
                <div id="campo_razao_social" class="">
                    @Html.TextBoxFor(m => m.RAZAO_SOCIAL_EMPRESA, new { style = "font-family: 'Verdana', Geneva, sans-serif; width: 500px;", maxlength = 100, @tabindex = "2" })
                    @Html.ValidationMessageFor(m => m.RAZAO_SOCIAL_EMPRESA, String.Empty)
                </div>
            </div>
            <div id="secao_nome_fantasia" class="formata_campos_cadastro">
                <div id="label_nome_fantasia" class="formata_label">
                    @Html.LabelFor(m => m.NOME_FANTASIA_EMPRESA)
                </div>
                <div id="campo_nome_fantasia" class="">
                    @Html.TextBoxFor(m => m.NOME_FANTASIA_EMPRESA, new { style = "font-family: 'Verdana', Geneva, sans-serif; width: 500px;", maxlength = 100, @tabindex = "3" })
                    @Html.ValidationMessageFor(m => m.NOME_FANTASIA_EMPRESA, String.Empty)
                </div>
            </div>
            <div id="secao_email1" class="formata_campos_cadastro">
