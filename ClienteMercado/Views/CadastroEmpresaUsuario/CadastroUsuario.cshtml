@model ClienteMercado.Models.CadastroUsuarioModel

@{
    ViewBag.Title = "CadastroUsuario";
    Layout = "~/Views/Shared/_Layout-Others-Home.cshtml";
}

<div id="label_titulo_paginas_contato" class="label_paginas">&nbsp;&nbsp;Cadastro do Usuário - Passo 3 de 3</div>

<div id="container_cadastro_empresa_usuario">
