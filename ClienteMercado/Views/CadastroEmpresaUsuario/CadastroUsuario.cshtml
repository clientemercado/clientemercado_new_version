                    @Html.LabelFor(m => m.NOME_ESTADO_EMPRESA_USUARIO)
                </div>
                <div id="campo_estado" class="">
                    @Html.TextBoxFor(m => m.NOME_ESTADO_EMPRESA_USUARIO, new { style = "font-family: 'Verdana', Geneva, sans-serif; width: 140px;", maxlength = 50, @tabindex = "9" })
