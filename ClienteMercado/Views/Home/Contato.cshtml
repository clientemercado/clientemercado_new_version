@using ClienteMercado.Models
@model ClienteMercado.Models.Contato
@*@model Modelo.Models.contato_cliente_mercado*@

@{
    ViewBag.Title = "Contato";
    Layout = "~/Views/Shared/_Layout-Others-Home.cshtml";

}

<div id="cabeçalho_id_pag">
    <h1>Contato</h1>
    <br/>
    <div id="barra_cabecalho"></div>
</div>
<div id="corpo_pagina">
    <p>Entre em contato com o Cliente & Mercado. Nos envie suas dúvidas, críticas ou sugestões.</p>
</div>
<br/>
<div id="container_form_contato">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <div id="campos_para_contato" class="campos_contato">    
            <div id="label_nome" class="formata_campos_contato">
                <h3>@Html.LabelFor(m => m.NomePContato)</h3>
            </div>
            <div id="campo_nome" class="formata_campos_contato">
                @Html.TextBoxFor(m => m.NomePContato, new { style = "font-family: 'Verdana', Geneva, sans-serif; width: 330px;", maxlength = 50, @tabindex = "1" })
                @Html.ValidationMessageFor(m => m.NomePContato, String.Empty)
            </div>
            <div id="label_email" class="formata_campos_contato">
                <h3>@Html.LabelFor(m => m.EmailPContato)</h3>
            </div>
            <div id="campo_email" class="formata_campos_contato">
                @Html.TextBoxFor(m => m.EmailPContato, new { style = "font-family: 'Verdana', Geneva, sans-serif; width: 330px;", maxlength = 50, @tabindex = "2" })
                @Html.ValidationMessageFor(m => m.EmailPContato, String.Empty)
            </div>
            <div id="label_assunto" class="formata_campos_contato">
                <h3>@Html.LabelFor(m => m.AssuntoPContato)</h3>
            </div>
            <div id="campo_assunto" class="formata_campos_contato">
                @Html.DropDownList("AssuntoPContato", Model.ListagemAssuntos, new { style = "font-family: 'Verdana', Geneva, sans-serif; width: 330px;", @tabindex = "3" })
                @Html.ValidationMessageFor(m => m.AssuntoPContato, String.Empty)
            </div>
            <div id="label_mensagem" class="formata_campos_contato">
                <h3>@Html.LabelFor(m => m.MensagemPContato)</h3>
            </div>
            <div id="campo_mensagem" class="formata_campos_contato">
                @Html.TextAreaFor(m => m.MensagemPContato, new { style = "font-family: 'Verdana', Geneva, sans-serif; width: 330px; height: 90px;", maxlength = 5000, @size = 51, @tabindex = "4" })
                @Html.ValidationMessageFor(m => m.MensagemPContato)
            </div>

            <div id="bt_submit" class="formata_campos_contato">
                <input type="submit" value="Enviar" class="i2Style"/>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}